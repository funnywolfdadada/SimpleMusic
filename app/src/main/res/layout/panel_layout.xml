<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#8000"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/panel_title"
            android:text="---"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/panel_author"
            android:text="---"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/panel_title"
            android:layout_toEndOf="@id/panel_title"
            android:layout_alignBottom="@id/panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/panel_current_time"
            android:text="00:00"
            android:textColor="#fff"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <SeekBar
            android:id="@+id/panel_seek_bar"
            android:max="100"
            android:progress="0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/panel_duration"
            android:text="00:00"
            android:textColor="#fff"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/panel_mode"
            android:text="L"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/panel_start_stop"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/panel_prev"
            android:text="prev"
            android:textSize="15sp"
            android:layout_alignTop="@id/panel_start_stop"
            android:layout_toLeftOf="@id/panel_start_stop"
            android:layout_toStartOf="@id/panel_start_stop"
            android:layout_width="80dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/panel_start_stop"
            android:text="start"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/panel_next"
            android:text="next"
            android:textSize="15sp"
            android:layout_alignTop="@id/panel_start_stop"
            android:layout_toRightOf="@id/panel_start_stop"
            android:layout_toEndOf="@id/panel_start_stop"
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </RelativeLayout>
</LinearLayout>